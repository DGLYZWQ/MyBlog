<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <!-- Facebook and Twitter integration -->
    <meta property="og:title" content="" />
    <meta property="og:image" content="" />
    <meta property="og:url" content="" />
    <meta property="og:site_name" content="" />
    <meta property="og:description" content="" />
    <meta name="twitter:title" content="" />
    <meta name="twitter:image" content="" />
    <meta name="twitter:url" content="" />
    <meta name="twitter:card" content="" />

    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Contents/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Contents/css/icomoon.css">
    <!-- Bootstrap  -->

    <link href="~/Areas/Backend/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/Contents/css/flexslider.css">
    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Contents/css/style.css">

    <!-- Modernizr JS -->
    <script src="~/Contents/js/modernizr-2.6.2.min.js"></script>
    <link rel="stylesheet" href="~/Contents/css/bootstrap.css">
    @RenderSection("css", false)
</head>
<body>
    <div id="fh5co-page">
        <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
        <aside id="fh5co-aside" role="complementary" class="border js-fullheight">
            @{
                var u = Context.Session["user"] as BlogSystem.Dtos.UsersDto;

                if (u == null)
                {
                    <h1 id="fh5co-logo" style="font-weight:400;text-transform:uppercase;"><a href="/FrontHome/Index">My Blog</a></h1>
                }
                else
                {
                    var userBll = System.Web.Mvc.DependencyResolver.Current.GetService<BlogSystem.IBLL.IUsersBll>();
                    var user = userBll.GetUsers(u.Id);
                    <h3 id="fh5co-logo" style="font-weight:100;font-size:25px">
                        <p><img src="~/Upload/Users/@user.Image" class="img-circle" style="height:64px;width:64px" /></p>
                        <a href="/FrontHome/UserCenter?UserId=@u.Id">@user.NickName</a>
                    </h3>
                }
            }

            <nav id="fh5co-main-menu" role="navigation">
                <ul id="navList" style="font-size: 25px">
                    <li><a href="../FrontHome/Index">主页</a></li>
                    <li><a href="../FrontHome/Category">分类</a></li>
                    <li><a href="../FrontHome/FocusBlogList">关注</a></li>
                    <li><a href="../FrontHome/About">关于我们</a></li>
                    <li><a href="../FrontHome/ContactUs">联系我们</a></li>
                </ul>
            </nav>

            <div class="fh5co-footer">
                <p>Copyright &copy; 2022.Microsoft All rights reserved.</p>
                <ul>
                    <li><a href="#"><i class="icon-github"></i></a></li>
                    <li><a href="#"><i class="icon-twitter2"></i></a></li>
                    <li><a href="#"><i class="icon-instagram"></i></a></li>
                    <li><a href="#"><i class="icon-google"></i></a></li>
                </ul>
            </div>

        </aside>

        <div id="fh5co-main">
            @RenderBody()
        </div>

    </div>

    <!-- jQuery -->
    <script src="~/Contents/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Contents/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Contents/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Contents/js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="~/Contents/js/jquery.flexslider-min.js"></script>


    <!-- MAIN JS -->
    <script src="~/Contents/js/main.js"></script>
    <script src="~/Contents/js/GetMenus.js"></script>
    @RenderSection("js",false)
</body>
</html>
