@model BlogSystem.Dtos.MessagesDto
@{
    ViewBag.Title = "联系我们";
    string search = ViewBag.Search;
    Layout = "~/Views/Share/FrontLayout.cshtml";
}

 
    <div class="fh5co-more-contact">
        <div class="fh5co-narrow-content">
            <div class="row">
                <div class="col-md-4">
                    <div class="fh5co-feature fh5co-feature-sm animate-box" data-animate-effect="fadeInLeft">
                        <div class="fh5co-icon">
                            <i class="icon-mail" style="font-size:50px"></i>
                        </div>
                        <div class="fh5co-text">
                            <p><a href="#" style="font-size: 18px">DevBlog@gmail.com</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="fh5co-feature fh5co-feature-sm animate-box" data-animate-effect="fadeInLeft">
                        <div class="fh5co-icon">
                            <i class="icon-location" style="font-size:50px"></i>
                        </div>
                        <div class="fh5co-text">
                            <p style="font-size: 18px">127 Pauline Ave, Buffalo Grove</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="fh5co-feature fh5co-feature-sm animate-box" data-animate-effect="fadeInLeft">
                        <div class="fh5co-icon">
                            <i class="icon-phone" style="font-size:50px"></i>
                        </div>
                        <div class="fh5co-text">
                            <p><a href="tel://" style="font-size: 18px">1-626-780-7552</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="fh5co-narrow-content animate-box" data-animate-effect="fadeInLeft">

        <div class="row">
            <div class="col-md-4" style="padding-bottom: 30px;">
                <h2 style="font-size: 35px;">留言板</h2>
            </div>
        </div>
        <form action="/FrontHome/ContactUs" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group" >
                                <input type="text" class="form-control" placeholder="昵称" name="Name" required>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="邮箱" name="Email" required>
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" placeholder="电话" name="Tel" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea name="Content" id="message" cols="30" rows="7" class="form-control" required placeholder="写下你对MYBLOG的修改建议..."></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-primary btn-md" value="Send Message">
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </form>
    </div>
 
 

