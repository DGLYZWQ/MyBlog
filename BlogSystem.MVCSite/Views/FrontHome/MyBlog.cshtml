@model PagedList.IPagedList<BlogSystem.MVCSite.Areas.Backend.Data.Blogs.BlogsListViewModel>
@using PagedList.Mvc;
 

@{ 
    ViewBag.Title = "My Blog";
    string search = ViewBag.Search;
    Layout = "~/Views/Share/FrontLayout.cshtml";
    }
 
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">主页</a> <span class="navbar-brand">></span><span class="navbar-brand">我的博客</span>
        </div>
        @Html.Partial("_Top")
    </div>
</nav>
<div class="row">
    <div class="col-md-9" style="padding:25px">
        @{ 
            foreach(var item in Model)
            {
                 <div class="media">
            <div class="media-left">

            </div>
           
            <div class="media-body">
                <a href="/FrontHome/BlogDetail?id=@item.Id">
                    <h2 class="media-heading" style="color:#377f7f">@item.Title</h2>
                    <p style="padding-top:5px; color: #808080;">@item.Content</p>
                    <div class="page-header" style="margin-top:0px;">
                        <h4><small>@item.UserName</small>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<small>@item.UpdateTime</small>
                        
                        <span style="float:right">
                            <a href="/FrontHome/DelBlog?id=@item.Id" onclick="return confirm('确定要删除吗？')" title="删除" style="float: right; margin-left: 15px; color: #808080 "><span class="glyphicon glyphicon-trash"></span> </a>
                           <a href="/FrontHome/EditBlog?id=@item.Id" title="编辑" style="float: right; margin-left: 15px; color: #808080 "><span class="glyphicon glyphicon-edit"></span> </a>
                        </span>
                        </h4>
                    </div>
                      </a>
            </div>
          
        </div>
            }
        }
       
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("MyBlog", new { page }))
    </div>

    </div>
     @Html.Partial("_Right")
</div>
