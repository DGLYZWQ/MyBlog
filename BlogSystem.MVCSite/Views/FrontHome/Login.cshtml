
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Contents/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Contents/vendor/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Contents/vendor/linearicons/style.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Contents/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Contents/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
</head>
<body>
    <!-- WRAPPER -->
<div id="wrapper" class="full-background">
    <div class="vertical-align-wrap">
        <div class="vertical-align-middle">
            <div @*class="auth-box"*@>
                <div class="content">
                    <div class="header">
                        <p class="lead"><span style="font-size: 50px; color: white; justify-content: center; ">My Blog</span></p>
                    </div>

                    @using (Html.BeginForm("Login", "FrontHome", FormMethod.Post, new {@class = "form-auth-small"}))
                    {
                        <div class="input-box" style="align-content: center">
                        <div class="form-group">
                            <label for="signin-email" class="control-label sr-only">Email</label>
                            <input type="email" class="form-control" id="signin-email" style="height: 40px; width: 400px;" placeholder="请输入电子邮件" name="Email">
                        </div>
                        <div class="form-group">
                            <label for="signin-password" class="control-label sr-only">Password</label>
                            <input type="password" class="form-control" id="signin-password" style="height: 40px; width: 400px;" placeholder="请输入密码" name="Password">
                        </div>
                        <div class="form-group clearfix">
                            <label class="fancy-checkbox element-left">
                                <input type="checkbox" name="RememberMe">
                                <span>Remember me</span>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block" style="height: 40px; width: 400px;">LOGIN</button>
                            <div class="bottom">
                                <span class="helper-text"><i class="fa fa-lock"></i> <a href="#">Forgot password?</a></span>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- END WRAPPER -->

<style>
    .full-background {
        /* Center the content */
        align-items: center;
        display: flex;
        flex-direction: column;
        justify-content: center;

        /* Take full size */
        height: 100vh;
        width: 100%;

        /* Background */
        background: url('/Contents/images/img_bg_2.jpg') center center / cover no-repeat;
        opacity: 0.95;
    }
</style>
</body>

