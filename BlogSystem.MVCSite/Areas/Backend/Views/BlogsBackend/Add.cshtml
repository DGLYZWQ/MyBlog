@using System.Web.UI.WebControls
@model BlogSystem.MVCSite.Areas.Backend.Data.Blogs.AddNoticeViewModel
@{
    ViewBag.Title = "发布公告";
    Layout = "~/Areas/Backend/Views/Shared/BackendLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">发布公告</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Add", "BlogsBackend", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="Title">公告标题：</label>
                        @Html.TextBoxFor(r => r.Title, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("Title")</span>
                    </div>

                    <div class="form-group">
                        <label for="CategoryId">类别：</label>
                        <select class="form-control">
                            <option value="cheese">公告</option>
                            <option value="tomatoes">C#</option>
                        </select>
                    </div>

                        @*<div class="form-group">
                    <label for="CategoryId">类别：</label>
                    @Html.DropDownList("CategoryId", (SelectList)ViewBag.CategoryName, new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessage("CategoryId")</span>
                </div>*@

                        <div>
                            <label for="Content">正文：</label>
                            <textarea class="form-control" placeholder="请自觉遵守国家有关互联网信息服务的法律、法规，文明使用网络。" rows="4"></textarea>
                            <span class="text-danger">@Html.ValidationMessage("Content")</span>
                        </div>

                        <br/>
                        <div class="form-group">
                            <button class="btn btn-success" typr="submit">保存</button>
                            <button class="btn btn-danger" typr="reset">重置</button>
                        </div>
                        }

                    </div>
                </div>
    </div>
</div>

@section script{
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}