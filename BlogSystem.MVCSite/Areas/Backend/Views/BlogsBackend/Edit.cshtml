@using System.Data.Entity.Migrations.Infrastructure
@model BlogSystem.MVCSite.Areas.Backend.Data.Blogs.EditBlogViewModel
@{
    ViewBag.Title = "编辑博客";
    Layout = "~/Areas/Backend/Views/Shared/BackendLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">编辑博客</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "BlogsBackend", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.HiddenFor(r => r.BlogId)
                    </div>
                    <div class="form-group">
                        <label for="BlogName">博客标题：</label>
                        @Html.TextBoxFor(r => r.BlogName, new{@class="form-control"})
                        <span class="text-danger">@Html.ValidationMessage("BlogName")</span>
                    </div>

                    <div class="form-group">
                        <label for="CategoryId">类别：</label>
                        <select class="form-control">
                            <option value="cheese">公告</option>
                            <option value="tomatoes">C#</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="IsPublic">博客是否公开：</label>
                        <br/>
                            <label class="radio-inline">
                                <input name="gender" value="male" type="radio">
                                <span><i></i>是</span>
                            </label>
                            <label class="radio-inline">
                                <input name="gender" value="female" type="radio">
                                <span><i></i>否</span>
                            </label>
                    </div>


                    <div class="form-group">
                        <button class="btn btn-success" typr="submit">保存</button>
                        <button class="btn btn-danger" typr="reset">重置</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section script{
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}


