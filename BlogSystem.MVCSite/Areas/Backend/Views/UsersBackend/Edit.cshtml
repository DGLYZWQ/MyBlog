@model BlogSystem.MVCSite.Areas.Backend.Data.Users.EditUsersViewModel
@{
    ViewBag.Title = "编辑用户";
    Layout = "~/Areas/Backend/Views/Shared/BackendLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">编辑用户</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "UsersBackend", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        @Html.HiddenFor(r => r.Id)
                    </div>
                    <div class="form-group">
                        <label for="Email">电子邮箱：</label>
                        @Html.TextBoxFor(r => r.Email, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("Email")</span>
                    </div>

                    <div class="form-group">
                        <label for="Passowrd">密码：</label>
                        @Html.TextBoxFor(r => r.Password, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("Password")</span>
                    </div>

                    <div class="form-group">
                        <label for="NickName">昵称：</label>
                        @Html.TextBoxFor(r => r.NickName, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("NickName")</span>
                    </div>

                    <div class="form-group">
                        <label for="MyPhoto">头像：</label>
                        <img src="~/Upload/Admins/@Model.Image"/>
                        <input type="file" name="MyPhoto" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="RolesId">权限：</label>
                        @Html.DropDownList("RolesId", (SelectList)ViewBag.RolesList, new { @class = "form-control" })
                        <span class="text-danger">@Html.ValidationMessage("RolesId")</span>
                    </div>




                    <div class="form-group">
                        <button class="btn btn-success" typr="submit">保存</button>
                        <button class="btn btn-danger" typr="reset">重置</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section script{
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}

